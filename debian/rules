	install	-m	644	lsbatch/man1/bmig.1			debian/volclava/opt/volclava-2.1/share/man/man1
	install	-m	644	lsbatch/man1/bmod.1			debian/volclava/opt/volclava-2.1/share/man/man1
	install	-m	644	lsbatch/man1/bparams.1			debian/volclava/opt/volclava-2.1/share/man/man1
